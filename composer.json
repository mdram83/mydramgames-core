{
  "name": "mdram83/mydramgames-core",
  "description": "Core features for MyDramGames project",
  "minimum-stability": "stable",
  "authors": [
    {
      "name": "Michal Dramowicz",
      "email": "michal.dramowicz@gmail.com"
    }
  ],
  "require": {
    "php": "^8.3",
    "mdram83/mydramgames-utils": "^1.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.3"
  },
  "repositories": [
    {
      "type": "vcs",
      "name": "mdram83/mydramgames-utils",
      "url": "https://github.com/mdram83/mydramgames-utils.git",
      "branch": "dev-main"
    }
  ],
  "autoload": {
    "psr-4": {
      "MyDramGames\\Core\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit --colors tests"
  }
}
